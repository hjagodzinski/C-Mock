#!/bin/bash

function print_usage
{
	echo "cmock-config provides compilation and linker options required when using with cmock"
	echo ""
	echo "$0 OPTION [gmock [gtest]]"
	echo ""
	echo "Options:"
	echo -e "\t    --cflags   print compilation options"
	echo -e "\t    --libs     print linker options"
	echo -e "\t    additional options:"
	echo -e "\t      [gmock]  path to libgmock"
	echo -e "\t      [gtest]  path to libgtest"
	echo -e "\t                defaults to [gmock]/gtest"
	echo -e "\t-h, --help print help"
}

if [ $# -lt 1 -o $# -gt 3 ] ; then
	print_usage 1>&2
	exit 1
elif [ "$1" == --cflags -a $# -le 3 ] ; then
	DIR=`readlink -f $0`
	DIR=`dirname $DIR`
	DIR=`dirname $DIR`

	if [ $# -eq 1 ] ; then
		echo "-I$DIR/include"
	elif [ $# -eq 2 ] ; then
		echo "-I$DIR/include -I$2/include"
	else
		echo "-I$DIR/include -I$2/include -I$3/include"
	fi
elif [ "$1" == --libs -a $# -le 3 ] ; then
	if [ $# -eq 1 ] ; then
		echo "-rdynamic -Wl,--no-as-needed -ldl"
	elif [ $# -eq 2 ] ; then
		echo "-rdynamic -Wl,--no-as-needed -ldl -L$2/lib"
	else
		echo "-rdynamic -Wl,--no-as-needed -ldl -L$2/lib -L$3/lib"
	fi
elif [ "$1" == -h -o "$1" == --help ] ; then
	print_usage
else
	print_usage 1>&2
	exit 1
fi
